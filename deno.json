{
  "tasks": {
    "dev": "deno run --allow-all --watch src/main.ts",
    "dev:api": "deno run --allow-all --watch api/main.ts",
    "start": "deno run --allow-all src/main.ts",
    "start:api": "deno run --allow-all api/main.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:app": "docker-compose logs -f ruuvi-station",
    "docker:logs:api": "docker-compose logs -f ruuvi-api",
    "docker:restart": "docker-compose restart ruuvi-station"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "mongodb": "npm:mongodb@6.8.0",
    "oak": "https://deno.land/x/oak@v17.1.3/mod.ts"
  }
}
